{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pelicula</h1>

    <table>
        <tbody>
            <tr>
                <th>Imdb</th>
                <td>{{ pelicula.imdb }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ pelicula.titulo }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ pelicula.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_pelicula_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('crud_pelicula_edit', { 'id': pelicula.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
