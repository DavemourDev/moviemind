{% extends 'base.html.twig' %}

{% block body %}
    <h1>Generos list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombrees</th>
                <th>Nombreen</th>
                <th>Descripcion</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genero in generos %}
            <tr>
                <td><a href="{{ path('crud_genero_show', { 'id': genero.id }) }}">{{ genero.nombreEs }}</a></td>
                <td>{{ genero.nombreEn }}</td>
                <td>{{ genero.descripcion }}</td>
                <td>{{ genero.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('crud_genero_show', { 'id': genero.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('crud_genero_edit', { 'id': genero.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_genero_new') }}">Create a new genero</a>
        </li>
    </ul>
{% endblock %}
