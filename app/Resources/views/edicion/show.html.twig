{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edicion</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ edicion.nombre }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{% if edicion.year %}{{ edicion.year|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ edicion.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_edicion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('crud_edicion_edit', { 'id': edicion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
