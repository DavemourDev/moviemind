{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clientes list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Fecharegistro</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td><a href="{{ path('crud_cliente_show', { 'id': cliente.id }) }}">{{ cliente.nombre }}</a></td>
                <td>{{ cliente.email }}</td>
                <td>{% if cliente.fechaRegistro %}{{ cliente.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ cliente.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('crud_cliente_show', { 'id': cliente.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('crud_cliente_edit', { 'id': cliente.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_cliente_new') }}">Create a new cliente</a>
        </li>
    </ul>
{% endblock %}
